{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "rootDirs": [
      "src",
      "pages"
    ],
    "declaration": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
