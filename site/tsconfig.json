{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src", "pages"],
    "declaration": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": ["**/*.ts", "**/*.tsx"]
}
