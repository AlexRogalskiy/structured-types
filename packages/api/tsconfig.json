{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@structured-types/typescript-config": ["../typescript-config/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**", "test/**"],
  "references": [{ "path": "../typescript-config" }]
}
